{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "g++ build active file",
      "type": "shell",
      "command": "/bin/g++",
      "args": [
        "-g",
        "${file}",
        "-o",
        "/tmp/a.out"
      ],
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "showReuseMessage": false,
        "clear": true
      },
      "options": {
        "cwd": "${workspaceRoot}"
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "C/C++ run",
      "type": "shell",
      "command": "/tmp/a.out",
      "presentation": {
        "echo": false,
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "C++ build and run",
      "group": "build",
      "dependsOrder": "sequence",
      "dependsOn": [
        "g++ build active file",
        "C/C++ run"
      ],
      "problemMatcher": [],
    }
  ]
}