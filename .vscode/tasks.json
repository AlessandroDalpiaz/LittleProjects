{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build C",
      "type": "shell",
      "command": "clear; gcc '${fileDirname}/${fileBasename}'; ./a.out;",
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Build C++",
      "type": "shell",
      "command": "clear; g++ '${fileDirname}/${fileBasename}'; ./a.out;",
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Build sml",
      "type": "shell",
      "command": "sml '${fileDirname}/${fileBasename}'",
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/Sml"
      },
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "gcc build active file",
      "command": "/usr/bin/gcc",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "/usr/bin"
      }
    },
    {
      "type": "shell",
      "label": "g++ build active file",
      "command": "/bin/g++",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "/bin"
      }
    }
  ]
}
